include _mixins.pug

block global
  - var domain = 'https://picturepan2.github.io/seo-audit.css/'
  - var url = domain

block variables
  - var slug = 'index'
  - var parent = 'index'
  - var title = 'SEO Audit.css'
  - var description = 'SEO Audit Tool powered by Pure CSS'

if slug == 'index'
  - var url = domain 
else
  - var url = domain + slug + '.html'

doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='robots' content='index, follow')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    meta(name='description' content= description)
    meta(name='author' content='Yan Zhu')
    meta(property='og:url' content= url)
    meta(property='og:title' content= title)
    meta(property='og:description' content= description)
    meta(name='twitter:card' content='summary')
    meta(name='twitter:site' content='@spectrecss')
    meta(name='twitter:creator' content='@picturepan2')
    link(rel='shortcut icon' href='assets/img/favicons/favicon.ico')
    link(rel='icon' href='assets/img/favicons/favicon.png')
    link(rel='stylesheet' href='assets/css/spectre.min.css')
    link(rel='stylesheet' href='assets/css/docs.min.css')
    link(rel='stylesheet' href='dist/seo-audit.min.css')
    link(rel='canonical' href= url)

  body
    block content

